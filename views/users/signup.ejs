<% layout("/layouts/boilerplate") -%>


<div class="row mt-3 mb-3">
          <h2 class="col-6 offset-3">SignUp on WanderLust</h2>
          <div class="col-6 offset-3">
                    <form action="/signup" method="post" class="needs-validation" novalidate>
                              <div class="mb-3">
                                        <label for="username" class="form-label">Username: </label>
                                        <input type="text" id="username" name="username" placeholder="Add a suitable name" class="form-control" required> 
                                        <div class="valid-feedback">Looks Good!</div>
                                        <div class="invalid-feedback">Please enter a suitable Title!</div>
                              </div>
                              <div class="mb-3">
                                        <label for="email" class="form-label">Email: </label>
                                        <input type="email" id="email" name="email" placeholder="Add your Email" class="form-control" required> 
                                        <div class="valid-feedback">Looks Good!</div>
                                        <div class="invalid-feedback">Please enter a suitable Email!</div>
                              </div>
                              <div class="mb-3">
                                        <label for="password" class="form-label">Password: </label>
                                        <input type="password" id="password" name="password" placeholder="Enter a nice password" class="form-control" required> 
                                        <div class="valid-feedback">Looks Good!</div>
                                        <div class="invalid-feedback">Please enter a suitable Password!</div>
                              </div>
                              <button class="btn btn-success" type="submit">SignUp</button>
                    </form>
          </div>
</div>